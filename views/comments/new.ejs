<%- include("../partials/header") %>
<h1 style="text-align: center;">Create a new comment for <%=campground.name%></h1>
<div class="row d-flex justify-content-center">
    <div class="col-8 col-md-4">

        <form style="margin-top: 30px;" action="/campground/<%=campground._id%>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="text" name="comment[text]" required>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">comment</button>
            </div>
        </form>
        <a href="/campground">back</a>
    </div>
</div>
<%- include("../partials/footer") %>