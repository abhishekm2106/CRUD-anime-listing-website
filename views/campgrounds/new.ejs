<%- include("../partials/header") %>

<h1 style="text-align: center;">Add New Anime to the List</h1>
<div class="row d-flex justify-content-center">
    <div class="col-8 col-md-4">

        <form style="margin-top: 30px;" action="/campground" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="name" name="name" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="url" name="url" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" placeholder="price" name="price" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Description" name="description" required>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Add</button>
            </div>
        </form>
        <a href="/campground">back</a>
    </div>
</div>
<%- include("../partials/footer") %>