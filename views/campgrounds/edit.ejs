<%- include("../partials/header") %>

<h1 style="text-align: center;">edit <%=campground.name%></h1>
<div class="row d-flex justify-content-center">
    <div class="col-8 col-md-4">

        <form style="margin-top: 30px;" action="/campground/<%=campground._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" value="<%=campground.name%>" name="campground[name]" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%=campground.image%>" name="campground[url]" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" value="<%=campground.price%>" name="campground[price]"
                    required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%=campground.para%>" name="campground[para]" required>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Update</button>
            </div>
        </form>
        <a href="/campground">back</a>
    </div>
</div>

<%- include("../partials/footer") %>